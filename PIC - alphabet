#INCLUDE <P16F877A.INC>
 ORG 0X00
 ; RS PORTC 6
 ; ENABLE PORTC 7
 ; DHT11 DAHA PORTC 5
AYARLAR
 BANKSEL TRISB ; GO TO BANK 1
 MOVLW 0X00
 MOVWF TRISD ;SET OUTPUT ALL
 MOVLW 0X20
 MOVWF TRISC ;SET OUTPUT EXCEPT 5. PORT
 MOVLW 0XFF
 MOVWF TRISB ;SET INPUT ALL
 BANKSEL PORTB ; GO TO BANK 0
 BSF PORTC,7 ;ENABLE 
 
MAIN ; MAIN FUNCTION
 CALL CLEAR ; CLEAR SCREEN
 CALL RETURN_HOME ; SET THE CURSOR BEGINNING OF 1ST LINE
 CALL MODE_SET ;SELECT MODE OF LCD
 CALL DISPLAY ; CURSOR AND BLINK OPTIONS
 CALL FUNCTION_SET ;OPTIONS OF 5X8 OR 5X11 CHARACTERS AND HOW MANY LINES SELECT
 CALL MENU 
 
CLEAR
 MOVLW 0X01
 MOVWF PORTD
 BCF PORTC,6
 CALL CLOCK
 RETURN
RETURN_HOME
 MOVLW 0X02
 MOVWF PORTD
 BCF PORTC,6
 CALL CLOCK
 RETURN
MODE_SET
 MOVLW 0X06
 MOVWF PORTD
 BCF PORTC,6
 CALL CLOCK
 RETURN
DISPLAY
 MOVLW 0X0F
 MOVWF PORTD
 BCF PORTC,6
 CALL CLOCK
 RETURN
FUNCTION_SET
 MOVLW 0X38
 MOVWF PORTD
 BCF PORTC,6
 CALL CLOCK
 RETURN
CLOCK
 BSF PORTC,7
 NOP
 NOP
 NOP
 BCF PORTC,7
 RETURN
PRINT_SPACE
 BSF PORTC,6 
 MOVLW 0X20
 MOVWF PORTD
 CALL CLOCK
 RETURN
LINE2
 BCF PORTC,6
 MOVLW 0XC0
 MOVWF PORTD
 CALL CLOCK
 BSF PORTC,6
 RETURN
MENU
 BSF PORTC,6 ; RS 1 OLUYOR
 
 CALL PRINT_SPACE

 CALL LINE2
 CALL PRINT_SPACE

 RETURN
 
 
